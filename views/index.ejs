
<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <title>Atlas</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

    <div class="jumbotron text-center">
        <h1><span class="fa fa-lock"></span> Atlas</h1>

        <p>Registered user functions:</p>

        <a href="/logout" class="btn btn-default"><span class="fa fa-user"></span> Logout</a>
        <a href="/profile" class="btn btn-default"><span class="fa fa-user"></span> Examine user profile</a>

        <p>Data in highlighted node:</p>
        <div id="bulbInfo">
            <fieldset>
                <strong>Id:</strong>
                <span id="bulbInfoId"></span>
                <br />
                <strong>Type:</strong>
                <span id="bulbInfoType"></span>
                <br />
                <strong>Outgoing Nodes:</strong>
                <span id="bulbInfoOutgoingNodes"></span>
                <br />
                <strong>Modification Time:</strong>
                <span id="bulbInfoModificationTime"></span>
                <br />
                <strong>Title:</strong>
                <input id="bulbInfoTitle" type="text" placeholder="Title" />
                <br />
                <strong>Resolved:</strong>
                <input id="bulbInfoResolved" type="checkbox" />
                <br />
                <strong>Parents (Workspace):</strong>
                <span id="bulbInfoParentsWorkspaceId"></span>
                <br />
                <strong>Parents (Container):</strong>
                <span id="bulbInfoParentsContainerId"></span>
                <br />
                <strong>Parents (Original):</strong>
                <span id="bulbInfoParentsOriginalId"></span>
                <br />
                <strong>Shares:</strong>
                <span id="bulbInfoShares"></span>
                <br />
                <textarea id="bulbInfoText"></textarea>
                <br />
                <br />
                <a href="#" class="btn btn-default linkUpdateBulb">Update Active Bulb</a>
                <a href="#" class="btn btn-default linkDeleteBulb">Delete Active Bulb</a>
            </fieldset>
        </div>

        <p>Available nodes:</p>
        <div id="bulbList">
            <ul>
                <!-- This will get populated. -->
            </ul>
        </div>
        <fieldset>
            <button id="btnNewBulb">New Bulb</button>
        </fieldset>
    </div>

</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
<script src="/javascript/global.js"></script>
</body>
</html>
